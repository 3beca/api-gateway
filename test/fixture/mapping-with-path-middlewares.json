{
    "version": 1,
    "headers": {
        "X-Api-Gateway": "api-gateway"
    },
    "services": [
        {
            "name": "auth",
            "host": "http://127.0.0.1",
            "port": "3000",
            "basePath": "/auth",
            "mappings": [
                {
                    "path": "/login",
                    "method": "POST",
                    "middlewares": ["a"]
                },
                {
                    "path": "/register",
                    "method": "POST",
                    "middlewares": ["b"]
                }
            ]
        }
    ]
}